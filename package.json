  },
  "scripts": {
    "build:tailwind": "tailwindcss build src/styles/tailwind.css -o src/styles/tailwind.output.css",
    "prestart": "npm run build:tailwind",
    "prebuild": "npm run build:tailwind",
    "start": "craco start",
    "build": "CI= craco build",
    "test": "craco test",
    "eject": "craco eject",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "format": "prettier --config-precedence file-override --write \"build/*token*.json\" && prettier --config-precedence file-override --write \"src/**/*.{tsx,ts,scss,md,json}\""
